{
  "name": "nodexprs",
  "version": "0.0.1",
  "description": "Node Express Application",
  "author": "Rick Yust <flintweather@gmail.com>",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git://github.com/obsidianstorms/nodexprs"
  },
  "main": "lib/index.js",
  "types": "typings/index.d.ts",
  "scripts": {
    "test": "mocha --compilers ts:ts-node/register \"test/**/*.spec.ts\"",
    "test:coverage": "nyc -e '.ts' --r html -r lcov -r text npm run test",
    "build": "tsc",
    "lint": "tslint -c ./tslint.json src/**/*.ts",
    "documentation": "./node_modules/.bin/typedoc --out ./doc/ --module commonjs --mode file --tsconfig ./tsconfig.json --ignoreCompilerErrors src/",
    "postinstall": "npm run build",
    "release:patch": "npm version patch --no-git-tag-version",
    "release:minor": "npm version minor --no-git-tag-version",
    "release:major": "npm version major --no-git-tag-version",
    "preversion": "git checkout develop",
    "version": "git stash",
    "postversion": "git stash && git flow release start $npm_package_version && git stash pop && git add package.json package-lock.json && git commit -m 'bump version' && git flow release publish $npm_package_version",
    "release:finish": "git flow release finish -p -m 'Release' $npm_package_version"
  },
  "private": true,
  "dependencies": {
    "body-parser": "^1.18.2",
    "debug": "^2.6.8",
    "express": "^4.16.3",
    "jsdom": "^11.5.1",
    "typescript": "^2.4.2"
  },
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.17",
    "@types/sinon": "^2.3.3",
    "chai": "^4.1.0",
    "dotenv": "^4.0.0",
    "mocha": "^3.4.2",
    "nyc": "^11.0.3",
    "sinon": "^2.4.1",
    "ts-node": "^3.3.0",
    "typedoc": "^0.8.0",
    "tslint": "^5.9.0",
    "typescript": "^2.4.2",
    "yarn": "^0.27.5"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "node_modules"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html"
    ],
    "all": true
  }
}
